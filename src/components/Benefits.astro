---
import BenefitsCard from "@components/BenefitsCard.astro";
import { cards } from "@data/benefits-card";
---

<div class="grid grid-cols-4 max-lg:grid-cols-2 max-sm:grid-cols-1 gap-10 mt-10">
	{
		cards.map((card) => (
			<BenefitsCard
				href={card.image.src}
				title={card.title}
				content={card.content}
			/>
		))
	}
</div>
